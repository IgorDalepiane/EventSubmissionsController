<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.indexController">
    <top>
        <HBox alignment="CENTER" prefHeight="30.0" prefWidth="600.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#handleAutor" text="Autores">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleSubmissao" text="Submissões">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
            </children>
            <cursor>
                <Cursor fx:constant="DEFAULT" />
            </cursor>
            <opaqueInsets>
                <Insets left="10.0" right="10.0" />
            </opaqueInsets>
        </HBox>
    </top>
    <center>
        <AnchorPane fx:id="anchor" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Text layoutX="150.0" layoutY="149.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Bem vindo ao SGdS!" textAlignment="CENTER" wrappingWidth="300.0">
                    <font>
                        <Font name="System Bold" size="21.0" />
                    </font>
                </Text>
                <Text layoutX="104.0" layoutY="215.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Para começar, escolha um domínio nos botões ao topo.">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Text>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
